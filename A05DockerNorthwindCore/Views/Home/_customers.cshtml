@model IEnumerable<Customers>

@if (Model.Count() == 0)
{
    <p>Es wurden keine Kunden gefunden</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(customer => customer.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(customer => customer.City)
                </th>
                <th>
                    @Html.DisplayNameFor(customer => customer.ContactName)
                </th>
                <th>
                    @Html.DisplayNameFor(customer => customer.Phone)
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayForModel()
        </tbody>
    </table>
}
